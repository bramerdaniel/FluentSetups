name: publish nuget packages

on:
  push:
    branches-ignore: [ master ]
  pull_request:
    branches-ignore: [ master ]
  workflow_dispatch:

env:
  SOLUTION_DIRECTORY : src
  SOLUTION_PATH : src/FluentSetups.sln


jobs:
  publish:
    runs-on: windows-latest

    steps:
    - name: setup NuGet.exe
      uses: NuGet/setup-nuget@v1.0.6
      with:
        nuget-version: latest
        nuget-api-key: ${{secrets.NUGET_API_KEY}}

    - name: upload nuget package to build artifact
      uses: actions/upload-artifact@v3.0.0
      with:
        name: nugetPackage
        path: src\Release\*.nupkg
        retention-days: 1
      
    - name: push to nuget.org
      run: nuget push src\Release\*.nupkg -src https://api.nuget.org/v3/index.json -ApiKey ${{secrets.NUGET_API_KEY}} -SkipDuplicate
  
  
